@using System.Web.UI.WebControls
@using dotNetFrameworkMVC_MoshProject.Models
@model IEnumerable<dotNetFrameworkMVC_MoshProject.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>No customer in current stage</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Discount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Detail",
                            "Customers", new { id = customer.Id }, null)
                        @Html.ActionLink("Edit","Edit",
                            "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.Membership.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

