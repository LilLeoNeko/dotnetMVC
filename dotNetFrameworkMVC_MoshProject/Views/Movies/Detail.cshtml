@model dotNetFrameworkMVC_MoshProject.Models.Movie
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.DayOfWeek, @Model.ReleaseDate.Date.ToShortDateString()</li>
    <li>Date Added: @Model.AddedDate.DayOfWeek, @Model.AddedDate.Date.ToShortDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>
